{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "assist": {
    "actions": {
      "source": {
        "useSortedKeys": "on"
      }
    }
  },
  "extends": ["ultracite"],
  "files": {
    "includes": ["**", "!**/dist", "!**/coverage", "!bun.lock"]
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "asNeeded",
      "trailingCommas": "all"
    }
  },
  "linter": {
    "rules": {
      "complexity": {
        "useLiteralKeys": "off"
      },
      "nursery": {
        "useConsistentTypeDefinitions": {
          "fix": "safe",
          "level": "error"
        }
      },
      "style": {
        "useBlockStatements": "off",
        "useTemplate": {
          "fix": "safe",
          "level": "error"
        }
      },
      "suspicious": {
        "noConsole": {
          "level": "error",
          "options": {
            "allow": ["table"]
          }
        }
      }
    }
  }
}
